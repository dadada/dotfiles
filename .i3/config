    status_command i3status
    position top
    output LVDS1
    colors {
        background $baseO3
#background $base3
        statusline $base0
#statusline $baseO0

# class			border	backgr.	text
#focused_workspace	$blue	$base2 $baseO1
#active_workspace	$green 	$base2 $baseO1 
#inactive_workspace	$base2	$base2 $baseO1
#urgent_workspace	$red	$base2 $baseO1

        focused_workspace	$blue	$baseO2 $base1
        active_workspace	$green 	$baseO2 $base1 
        inactive_workspace	$baseO1	$baseO2 $base1
        urgent_workspace	$red	$baseO2 $base1
    }
}

