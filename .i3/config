set_from_resource $background i3wm.background #000000
set_from_resource $foreground i3wm.foreground #ffffff
set_from_resource $black i3wm.color0 #000000
set_from_resource $brightblack i3wm.color8 #575757
set_from_resource $red i3wm.color1 #e7344c
set_from_resource $brightred i3wm.color9 #e7344c
set_from_resource $green i3wm.color2 #a2c617
set_from_resource $brightgreen i3wm.color10 #a2c617
set_from_resource $yellow i3wm.color3 #fff374
set_from_resource $brightyellow i3wm.color11 #fff374
set_from_resource $blue i3wm.color4 #75519c
set_from_resource $brightblue i3wm.color12 #75519c
set_from_resource $magenta i3wm.color5 #ec6090
set_from_resource $brightmagenta i3wm.color13 #ec6090
set_from_resource $cyan i3wm.color6 #007bc4
set_from_resource $brightcyan i3wm.color14 #007bc4
set_from_resource $white i3wm.color7 #ffffff
set_from_resource $brightwhite i3wm.color15 #ffffff

# global modifier key
set $mod Mod4

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3!' 'i3-msg exit'"

# the font to be used for i3bar and window decorations
font pango:NotoMono 8
#font pango:Noto Sans Mono CJK JP 8

# start i3-input
bindsym $mod+i exec /usr/bin/i3-input

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# start dmenu
bindsym $mod+d exec i3-dmenu-desktop --dmenu='dmenu -fn 'Monospace:size=9:antialias=true:hinting=true' -nb "$background" -nf "$foreground" -sb "$green" -sf "$foreground" -b'

# kill focused window
bindsym $mod+Shift+q kill

# toggle moving floating windows with the mouse
floating_modifier $mod

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# change focus with arrow keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# change focus with hjkl
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# move focused window with hjkl
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# focus latest urgent window
bindsym $mod+x [urgent=latest] focus

# resize window (you can also use the mouse for that)
mode "resize" {
	# resize windows with arrow keys
	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt
	
	# resize windows with hjkl
	bindsym h resize shrink width 10 px or 10 ppt
	bindsym j resize grow height 10 px or 10 ppt
	bindsym k resize shrink height 10 px or 10 ppt
	bindsym l resize grow width 10 px or 10 ppt
	
	# back to normal mode 
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

# switch to resize mode
bindsym $mod+r mode "resize"

# toggle window decorations
bindsym $mod+t border toggle

# set border width of new window
new_window pixel 2

# keep focus within current container?
force_focus_wrapping no

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# focus the parent container
bindsym $mod+p focus parent

# focus the child container
bindsym $mod+o focus child

# default orientation of new windows
default_orientation horizontal

# split in horizontal orientation
bindsym $mod+b split h

# split in vertical orientation
bindsym $mod+v split v

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# name workspaces
set $1 1:msg
set $2 2:web
set $3 3:dev
set $4 4
set $5 5
set $6 6
set $7 7
set $8 8
set $9 9
set $10 10:remote

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $1
bindsym $mod+Shift+2 move container to workspace number $2
bindsym $mod+Shift+3 move container to workspace number $3
bindsym $mod+Shift+4 move container to workspace number $4
bindsym $mod+Shift+5 move container to workspace number $5
bindsym $mod+Shift+6 move container to workspace number $6
bindsym $mod+Shift+7 move container to workspace number $7
bindsym $mod+Shift+8 move container to workspace number $8
bindsym $mod+Shift+9 move container to workspace number $9
bindsym $mod+Shift+0 move container to workspace number $10
bindsym $mod+Shift+m move container to workspace next
bindsym $mod+Shift+n move container to workspace prev

# default mode
workspace_layout default

# automatically jump back to previous workspace
workspace_auto_back_and_forth yes

# switch to workspace
bindsym $mod+1 workspace number $1
bindsym $mod+2 workspace number $2
bindsym $mod+3 workspace number $3
bindsym $mod+4 workspace number $4
bindsym $mod+5 workspace number $5
bindsym $mod+6 workspace number $6
bindsym $mod+7 workspace number $7
bindsym $mod+8 workspace number $8
bindsym $mod+9 workspace number $9
bindsym $mod+0 workspace number $10
bindsym $mod+m workspace next
bindsym $mod+n workspace prev

# focus different outputs (displays)
bindsym $mod+period focus output right
bindsym $mod+comma focus output left

# move selected workspace to output
bindsym $mod+Shift+period move workspace to output right
bindsym $mod+Shift+comma move workspace to output left

# make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# show the first scratchpad window
bindsym $mod+minus scratchpad show

# lock the screen
bindsym $mod+equal exec --no-startup-id i3lock -f -c "$background"
#bindsym $mod+Shift+equal exec --no-startup-id i3lock && systemctl suspend

# control volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute 1 toggle

# control media player
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# control screen brightnes
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10

# bar
bar {
	id bar
	mode dock
	position top
	status_command i3status
	strip_workspace_numbers no
	workspace_buttons yes
	tray_output none
	colors {
		background $background
		statusline $foreground
		separator $brightblack

		# class			border		backgr.		text
		focused_workspace	$cyan		$background	$foreground
		active_workspace	$green		$background	$foreground
		inactive_workspace	$brightblack	$background	$foreground
		urgent_workspace	$red		$background	$foreground
		binding_mode		$white		$background 	$foreground
	}
}

# colors for window decorations
# class			border		backgr.		text		indicator
client.focused		$cyan		$cyan	    	$foreground	$cyan	    
client.focused_inactive	$green		$green	    	$foreground	$blue	    
client.unfocused	$brightblack	$brightblack   	$foreground	$green	    
client.urgent		$red		$red	    	$foreground	$red	    
client.placeholder	$brightblack	$brightblack 	$foreground	$brightblack
client.background	$background

# automatically run the following after starting i3
#exec --no-startup-id xsetroot -solid "$background"
#exec --no-startup-id xrdb ~/.Xresources
exec --no-startup-id feh --bg-fill ~/.wallpaper.jpg
