URxvt*cursorBlink: false
URxvt*cursorUnderline: false
URxvt*.font: xft:Noto Mono:size=8:normal:antialias=true:hinting=slight, \
xft:Noto Sans Mono CJK JP:size=8:normal:antialias=true:hinting=slight, \
xft:Noto Color Emoji:size=8:normal:antialias=true:hinting=slight, \
xft:Noto Emoji:size=8:normal:antialias=true:hinting=slight
URxvt*.internalBorder: 0
URxvt*.externalBorder: 0
xterm*VT100.Translations: #override \
                 Ctrl Shift <Key>V:    insert-selection(CLIPBOARD) \n\
                 Ctrl Shift <Key>C:    copy-selection(CLIPBOARD)
URxvt*saveLines: 8192
URxvt*scrollBar: false
URxvt.letterSpace: -1

! Terminal colors
*background: #000000
*foreground: #ffffff
