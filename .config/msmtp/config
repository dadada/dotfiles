# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# Uberspace
account uberspace
host encke.uberspace.de
port 587
from mail@timschubert.net
user dadada
passwordeval "pass uberspace.de/dadada | head -n1"

# TU Braunschweig
account tubs
host groupware.tu-braunschweig.de
port 465
from tim.schubert@tu-braunschweig.de
user y0067212
passwordeval "pass tu-bs.de/y0067212 | head -n1"

account default : uberspace

aliases        /etc/aliases
