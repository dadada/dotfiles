set_from_resource	$background	i3wm.background	#101010
set_from_resource	$foreground	i3wm.foreground	#5e5e5e
set_from_resource	$base00	i3wm.color0	#101010
set_from_resource	$base01	i3wm.color8	#252525
set_from_resource	$base02	i3wm.color1	#464646
set_from_resource 	$base03	i3wm.color9	#525252
set_from_resource 	$base04	i3wm.color2	#ababab
set_from_resource 	$base05	i3wm.color10	#b9b9b9
set_from_resource 	$base06	i3wm.color3	#e3e3e3
set_from_resource 	$base07	i3wm.color11	#f7f7f7
set_from_resource	$base08	i3wm.color4	#7c7c7c
set_from_resource	$base09	i3wm.color12	#999999
set_from_resource	$base0A	i3wm.color5	#a0a0a0
set_from_resource	$base0B	i3wm.color13	#8e8e8e
set_from_resource	$base0C	i3wm.color6	#868686
set_from_resource	$base0D	i3wm.color14	#686868
set_from_resource	$base0E	i3wm.color7	#747474
set_from_resource	$base0F	i3wm.color15	#5e5e5e

# global modifier key
set $mod Mod4

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3!' 'i3-msg exit'"

# the font to be used for i3bar and window decorations
font pango:NotoMono 8
#font pango:Noto Sans Mono CJK JP 8

# start i3-input
bindsym $mod+i exec /usr/bin/i3-input

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# start dmenu
bindsym $mod+d exec i3-dmenu-desktop --dmenu='dmenu -fn 'Monospace:size=9:antialias=true:hinting=true' -b -nb "$background" -nf "$foreground" -sb "$base0C" -sf "$base01" -b'

# kill focused window
bindsym $mod+Shift+q kill

# toggle moving floating windows with the mouse
floating_modifier $mod

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# change focus with arrow keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# change focus with hjkl
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# move focused window with hjkl
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# focus latest urgent window
bindsym $mod+x [urgent=latest] focus

# resize window (you can also use the mouse for that)
mode "resize" {
	# resize windows with arrow keys
	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt
	
	# resize windows with hjkl
	bindsym h resize shrink width 10 px or 10 ppt
	bindsym j resize grow height 10 px or 10 ppt
	bindsym k resize shrink height 10 px or 10 ppt
	bindsym l resize grow width 10 px or 10 ppt
	
	# back to normal mode 
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

# switch to resize mode
bindsym $mod+r mode "resize"

# toggle window decorations
bindsym $mod+t border toggle

# set border width of new window
new_window pixel 2

# keep focus within current container?
force_focus_wrapping no

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# focus the parent container
bindsym $mod+p focus parent

# focus the child container
bindsym $mod+o focus child

# default orientation of new windows
default_orientation horizontal

# split in horizontal orientation
bindsym $mod+b split h

# split in vertical orientation
bindsym $mod+v split v

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# name workspaces
set $1 1:msg
set $2 2:web
set $3 3:dev
set $4 4
set $5 5
set $6 6
set $7 7
set $8 8
set $9 9
set $10 10:remote

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $1
bindsym $mod+Shift+2 move container to workspace number $2
bindsym $mod+Shift+3 move container to workspace number $3
bindsym $mod+Shift+4 move container to workspace number $4
bindsym $mod+Shift+5 move container to workspace number $5
bindsym $mod+Shift+6 move container to workspace number $6
bindsym $mod+Shift+7 move container to workspace number $7
bindsym $mod+Shift+8 move container to workspace number $8
bindsym $mod+Shift+9 move container to workspace number $9
bindsym $mod+Shift+0 move container to workspace number $10
bindsym $mod+Shift+m move container to workspace next
bindsym $mod+Shift+n move container to workspace prev

# default mode
workspace_layout default

# automatically jump back to previous workspace
workspace_auto_back_and_forth yes

# switch to workspace
bindsym $mod+1 workspace number $1
bindsym $mod+2 workspace number $2
bindsym $mod+3 workspace number $3
bindsym $mod+4 workspace number $4
bindsym $mod+5 workspace number $5
bindsym $mod+6 workspace number $6
bindsym $mod+7 workspace number $7
bindsym $mod+8 workspace number $8
bindsym $mod+9 workspace number $9
bindsym $mod+0 workspace number $10
bindsym $mod+m workspace next
bindsym $mod+n workspace prev

# focus different outputs (displays)
bindsym $mod+period focus output right
bindsym $mod+comma focus output left

# move selected workspace to output
bindsym $mod+Shift+period move workspace to output right
bindsym $mod+Shift+comma move workspace to output left

# make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# show the first scratchpad window
bindsym $mod+minus scratchpad show

# lock the screen
bindsym $mod+equal exec --no-startup-id i3lock -f -c "$background"

# control volume
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer set 'Master' 5%+ && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id amixer set 'Master' 5%- && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec --no-startup-id amixer set Master toggle && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMicMute exec --no-startup-id amixer set 'Capture' toggle && pkill -RTMIN+10 i3blocks

# control media player
bindsym XF86AudioPlay exec mpc toggle && pkill -RTMIN+11 i3blocks
bindsym XF86AudioNext exec mpc next && pkill -RTMIN+11 i3blocks
bindsym XF86AudioPrev exec mpc prev && pkill -RTMIN+11 i3blocks

# control screen brightnes
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10

# Basic bar configuration using the Base16 variables.
bar {
	id bar
	status_command i3blocks
	mode dock
	position bottom
	strip_workspace_numbers no
	workspace_buttons yes
	tray_output none
	colors {
		background $base00
			separator  $base01
			statusline $base04

			# State             Border  BG      Text
			focused_workspace   $base05 $base03 $base05
			active_workspace    $base05 $base00 $base05
			inactive_workspace  $base03 $base01 $base05
			urgent_workspace    $base08 $base08 $base05
			binding_mode        $base00 $base0A $base05
	}
}

# Basic color configuration using the Base16 variables for windows and borders.
# Property Name         Border  BG      Text    Indicator Child Border
client.focused          $base05 $base03 $base05 $base0D $base0D
client.focused_inactive $base01 $base01 $base05 $base03 $base01
client.unfocused        $base01 $base00 $base05 $base01 $base01
client.urgent           $base08 $base08 $base05 $base08 $base08
client.placeholder      $base00 $base00 $base05 $base00 $base00
client.background       $base07

# automatically run the following after starting i3
exec --no-startup-id xsetroot -solid "$background"
